<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradiente"
    tools:context=".CriarEventoActivity">


    <!-- Flecha do botão de voltar -->
    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_arrow_back"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo_main"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="-50dp"
        android:contentDescription="@string/logo_do_aplicativo_syncmeet"
        android:src="@drawable/logo" 
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Título -->
    <TextView
        android:id="@+id/criar_evento_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Criar evento"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_main" />

    <!-- Nome evento -->
    <EditText
        android:id="@+id/nome_evento"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_underline"
        android:gravity="center_horizontal"
        android:hint="Nome do evento"
        android:paddingBottom="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AFAFAF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/criar_evento_title" />

    <!-- Local -->
    <EditText
        android:id="@+id/local_evento"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_underline"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:hint="Local"
        android:paddingBottom="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AFAFAF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_evento" />

    <!-- Data -->
    <EditText
        android:id="@+id/data_evento"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_underline"
        android:drawableStart="@drawable/ic_calendario"
        android:drawablePadding="8dp"
        android:drawableTint="#FFFFFF"
        android:focusable="false"
        android:gravity="center"
        android:hint="DD/MM/AAAA"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AFAFAF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/local_evento" />


    <!-- Hora -->
    <EditText
        android:id="@+id/hora_evento"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_underline"
        android:drawableStart="@drawable/ic_relogio"
        android:drawablePadding="8dp"
        android:drawableTint="#FFFFFF"
        android:focusable="false"
        android:gravity="center"
        android:hint="HH:MM"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AFAFAF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_evento" />

    <!-- Botão de criar evento -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/criar_evento_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/open_sans_bold"
        android:padding="12dp"
        android:text="Criar evento"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:backgroundTint="#8b5cf6"
        app:cornerRadius="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hora_evento" />



</androidx.constraintlayout.widget.ConstraintLayout>