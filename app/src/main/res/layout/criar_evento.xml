<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradiente">

    <ImageView
        android:id="@+id/logo_main"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/logo_do_aplicativo_syncmeet"
        android:elevation="1dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/criar_evento_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar Evento"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/open_sans_bold"/>

    <EditText
        android:id="@+id/nome_evento"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/input_underline"
        android:hint="Nome do evento"
        android:gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textColorHint="#AFAFAF"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/criar_evento_title" />

    <EditText
        android:id="@+id/local_evento"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_underline"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:hint="Local"
        android:paddingBottom="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AFAFAF"
        app:layout_constraintEnd_toEndOf="@+id/nome_evento"
        app:layout_constraintStart_toStartOf="@+id/nome_evento"
        app:layout_constraintTop_toBottomOf="@+id/nome_evento" />

    <EditText
        android:id="@+id/data_evento"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_underline"
        android:drawableStart="@drawable/ic_calendario"
        android:drawableTint="#FFFFFF"
        android:drawablePadding="8dp"
        android:focusable="false"
        android:gravity="center"
        android:hint="DD/MM/AAAA"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AFAFAF"
        app:layout_constraintEnd_toEndOf="@+id/local_evento"
        app:layout_constraintStart_toStartOf="@+id/local_evento"
        app:layout_constraintTop_toBottomOf="@+id/local_evento" />

    <EditText
        android:id="@+id/hora_evento"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_underline"
        android:drawableStart="@drawable/ic_relogio"
        android:drawableTint="#FFFFFF"
        android:drawablePadding="8dp"
        android:focusable="false"
        android:gravity="center"
        android:hint="HH:MM"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AFAFAF"
        app:layout_constraintEnd_toEndOf="@+id/data_evento"
        app:layout_constraintStart_toStartOf="@+id/data_evento"
        app:layout_constraintTop_toBottomOf="@+id/data_evento" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginEnd="125dp"
        android:layout_marginTop="40dp"
        android:padding="12dp"
        android:text="Criar Evento"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/open_sans_bold"
        app:backgroundTint="#8b5cf6"
        app:cornerRadius="29dp"
        app:layout_constraintEnd_toEndOf="@+id/hora_evento"
        app:layout_constraintStart_toStartOf="@+id/hora_evento"
        app:layout_constraintTop_toBottomOf="@+id/hora_evento"/>


</androidx.constraintlayout.widget.ConstraintLayout>